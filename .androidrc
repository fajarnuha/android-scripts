# Exporting necessary path for Android Dev Environment, eg adb, and this repo
export JAVA_HOME=/Library/Java/JavaVirtualMachines/jdk1.8.0_181.jdk/Contents/Home
export ANDROID_HOME=/Users/nakama/Library/Android/sdk
export ANDROID_SDK=/Users/nakama/Library/Android/sdk
export ANDROID_NDK=$ANDROID_HOME/ndk-bundle
export PATH=${PATH}:$ANDROID_HOME/tools:$ANDROID_HOME/platform-tools:$HOME/AndroidStudioProjects/android-scripts

alias ss="adb shell screencap -p | perl -pe 's/\x0D\x0A/\x0A/g' > ~/Desktop/screen.png"
alias gtm="adb shell setprop log.tag.GAv4 DEBUG && adb logcat -s GAv4"
alias eval="./gradlew --profile --recompile-scripts --offline --rerun-tasks assembleLiveProdDebug"